<body>
  <!-- Navbar -->
  <div class="navbar">
    <div>
      <img src="https://via.placeholder.com/50" alt="Logo">
      <span>Student Spark</span>
    </div>
    <div>
      <button onclick="alert('Profile Coming Soon!')">Profile</button>
    </div>
  </div>

  <!-- Main Container -->
  <div class="container">
    <!-- Post an Idea -->
    <div class="idea-box">
      <h2>Share Your Idea</h2>
      <textarea id="ideaInput" placeholder="Write your idea here..."></textarea>
      <input type="file" id="imageInput" accept="image/*" />
      <input type="file" id="videoInput" accept="video/*" />
      <button onclick="postIdea()">Post Idea</button>
    </div>

    <!-- Ideas Feed -->
    <div id="ideasFeed">
      <h2>Ideas Feed</h2>
      <!-- Ideas will appear here dynamically -->
    </div>
  </div>

  <script>
    const ideas = [];

    function postIdea() {
      const ideaText = document.getElementById('ideaInput').value.trim();
      const imageInput = document.getElementById('imageInput').files[0];
      const videoInput = document.getElementById('videoInput').files[0];

      if (ideaText === '') {
        alert('Please enter an idea!');
        return;
      }

      const media = [];
      if (imageInput) media.push({ type: 'image', file: URL.createObjectURL(imageInput) });
      if (videoInput) media.push({ type: 'video', file: URL.createObjectURL(videoInput) });

      const idea = { text: ideaText, media, comments: [], likes: 0 };
      ideas.push(idea);
      renderIdeas();
      document.getElementById('ideaInput').value = '';
      document.getElementById('imageInput').value = '';
      document.getElementById('videoInput').value = '';
    }

    function postComment(ideaIndex) {
      const commentInput = document.getElementById(`commentInput-${ideaIndex}`);
      const commentText = commentInput.value.trim();
      if (commentText === '') {
        alert('Please enter a comment!');
        return;
      }
      ideas[ideaIndex].comments.push(commentText);
      renderIdeas();
    }

    function likeIdea(ideaIndex) {
      ideas[ideaIndex].likes += 1;
      renderIdeas();
    }

    function requestCollaboration(ideaIndex) {
      alert(`Collaboration request sent for Idea: "${ideas[ideaIndex].text}"`);
    }

    function renderIdeas() {
      const ideasFeed = document.getElementById('ideasFeed');
      ideasFeed.innerHTML = '';
      ideas.forEach((idea, index) => {
        const ideaDiv = document.createElement('div');
        ideaDiv.classList.add('idea-card');
        
        let mediaContent = '';
        idea.media.forEach(item => {
          if (item.type === 'image') {
            mediaContent += `<img src="${item.file}" class="media" alt="Idea Image">`;
          } else if (item.type === 'video') {
            mediaContent += `<video src="${item.file}" class="media" controls></video>`;
          }
        });

        ideaDiv.innerHTML = `
          <h3>${idea.text}</h3>
          ${mediaContent}
          <div class="comment-box">
            <input type="text" id="commentInput-${index}" placeholder="Write a solution...">
            <button onclick="postComment(${index})">Post Solution</button>
          </div>
          <div class="idea-actions">
            <button onclick="likeIdea(${index})">Like (${idea.likes})</button>
            <button onclick="requestCollaboration(${index})">Request Collaboration</button>
          </div>
          ${idea.comments.map(comment => `<div class="comment">- ${comment}</div>`).join('')}
        `;
        ideasFeed.appendChild(ideaDiv);
      });
    }
  </script>
</body>
